<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.piotrzadka.androidhttpserverapp.DetailsActivity">

    <TextView
        android:id="@+id/studentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/studentLabel"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/studentDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/studentDesc"
        android:textSize="18sp" />
</RelativeLayout>
